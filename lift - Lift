#include<bits/stdc++.h>
using namespace std;

#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#define ll long long

//====================================

ll test_case=1;

void solve(){
    ll lift, me; cin>>me >>lift;
    ll ans = abs(lift-me)*4;
    ans += 19;
    ans += me*4;
    cout<<"Case " <<test_case++ <<": ";
    cout<<ans <<'\n';
}


int main(){
    optimize();

    ll t=1;
    cin>>t;
    while(t--)
        solve();
}
